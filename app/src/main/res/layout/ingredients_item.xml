<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:backgroundTint="@color/white"
    android:id="@+id/ingredientCard">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/imageViewIngredientImage"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@color/darKsa"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_oval="true"/>

    <TextView
        android:id="@+id/textViewIngredientNameItem_mealDetails"
        style="@style/header_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        app:layout_constraintEnd_toEndOf="@+id/imageViewIngredientImage"
        app:layout_constraintStart_toStartOf="@+id/imageViewIngredientImage"
        app:layout_constraintTop_toBottomOf="@+id/textViewIngredientMeasureItem"
        tools:text="Avocado" />

    <TextView
        android:id="@+id/textViewIngredientMeasureItem"
        android:fontFamily="@font/barlowbold"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/notBlack"
        app:layout_constraintEnd_toEndOf="@+id/imageViewIngredientImage"
        app:layout_constraintStart_toStartOf="@+id/imageViewIngredientImage"
        app:layout_constraintTop_toBottomOf="@+id/imageViewIngredientImage"
        tools:text="1 sliced" />
</androidx.constraintlayout.widget.ConstraintLayout>
