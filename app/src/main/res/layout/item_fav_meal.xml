<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardViewRandomMeal"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    app:cardElevation="4dp"
    app:cardMaxElevation="6dp"
    app:cardCornerRadius="16dp"
    app:cardUseCompatPadding="true">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imageView_item_fav"
            android:layout_width="match_parent"
            android:layout_height="164dp"
            android:scaleType="fitXY"
            android:src="@drawable/egg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:riv_corner_radius_top_left="16dp"
            app:riv_corner_radius_top_right="16dp" />

        <TextView
            android:id="@+id/textView_meal_title_item_fav"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:layout_marginVertical="12dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView_item_fav"
            app:layout_constraintVertical_bias="0.0"
            tools:text="Traditional French omelette" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/icon_remove_item_fav"
            android:layout_width="41dp"
            android:layout_height="38dp"
            android:src="@drawable/trash"
            app:layout_constraintEnd_toEndOf="@id/imageView_item_fav"
            app:layout_constraintTop_toTopOf="@id/imageView_item_fav"
            app:riv_corner_radius="25dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>